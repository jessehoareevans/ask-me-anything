{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Type your question</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Enter your name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Enter thoughts or notes regarding question</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
